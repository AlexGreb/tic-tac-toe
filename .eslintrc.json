{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [ 
        "eslint:recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "max-len": ["error", 140, 2],
        "prettier/prettier": "error"
    }
}
